{
  "name": "resume-analyzer",
  "version": "1.0.0",
  "description": "AI-Driven Resume Analyzer with MERN Stack and Tailwind CSS",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "npm run start --prefix client",
    "build": "npm ci --prefix client && npm run build --prefix client",
    "vercel-build": "npm ci && npm ci --prefix client && npm run build --prefix client",
    "start": "node server/index.js",
    "install-client": "npm ci --prefix client",
    "install-server": "npm ci",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": [
    "resume",
    "analyzer",
    "ai",
    "mern",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.5.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}


